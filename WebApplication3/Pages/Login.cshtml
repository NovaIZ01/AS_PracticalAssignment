@page
@inject IHttpContextAccessor contxt;
@model WebApplication3.Pages.LoginModel
@{
								
	
}<div class="container mt-5">

    <div class="row justify-content-center align-items-center">

        <div class="col-sm-12 col-md-12 col-lg-4">
            <h1 class="mb-3">Login </h1>

            <form method="post">

                <div class="mb-3">
                    <label class="form-label" asp-for="LoginM.Email">Email Address</label>
                    <input type="Text" asp-for="LoginM.Email" class="form-control" />
                    <span asp-validaton-for="LoginM.Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="LoginM.Password">Password</label>
                    <input type="Text" asp-for="LoginM.Password" class="form-control" />
                    <span asp-validaton-for="LoginM.Password" class="text-danger"></span>
                </div>

                <div class="mb-3 form-check">
                    <input type="checkbox" asp-for="LoginM.RememberMe" class="form-check-input" />
                    <label class="form-check-label" asp-for="LoginM.RememberMe">Remember Me?</label>
                </div>

                <div class="mb-3">
                    <button type="submit"
                            class="btn btn-primary">
                        Login
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>